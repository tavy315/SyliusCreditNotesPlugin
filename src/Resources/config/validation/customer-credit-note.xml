<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping">
    <class name="Tavy315\SyliusCreditNotesPlugin\Entity\CustomerCreditNote">
        <property name="customer">
            <constraint name="NotBlank">
                <option name="groups">tavy315_sylius_credit_notes</option>
            </constraint>
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>customer</value>
                <value>documentNo</value>
            </option>
            <option name="errorPath">documentNo</option>
            <option name="groups">tavy315_sylius_credit_notes</option>
            <option name="message">DocumentNo already exists for this customer.</option>
        </constraint>
    </class>
</constraint-mapping>
